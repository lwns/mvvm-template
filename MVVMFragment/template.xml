<?xml version="1.0"?>
<template
    format="1"
    revision="1"
    name="MVVM Fragment"
    minApi="7"
    minBuildApi="14"
    description="Creates a new MVVM Fragment">

    <category value="MVVM" />
    <formfactor value="Mobile" />

    <parameter
        id="activityClass"
        name="Fragment Name"
        type="string"
        constraints="class|unique|nonempty"
        default="Main"
        help="The name of the fragment class to create" />

    <parameter
        id="attachtoactivityClass"
        name="attach To Activity Name"
        type="string"
        constraints="class|unique|nonempty"
        default="Main"
        help="The name of the fragment attach to class name" />

    <parameter
        id="packageName"
        name="Class Package name"
        type="string"
        constraints="package"
        default="com.slashYouth.thatWhat.feature"
        help="class package name" />   

    <parameter
        id="appPackageName"
        name="App Package name"
        type="string"
        default="com.slashYouth.thatWhat"
        help="app package name" />   

    <parameter
        id="application"
        name="app Package name"
        type="string"
        default="com.slashYouth.thatWhat"
        help="app package name" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>  
